import java.util.Random;
import java.lang.math;

public class FindingPi {
 
 Random random = new Random();
 
 public double xVal() {
  return random.nextDouble();
 }
 
 public double yVal() {
  return random.nextDouble();
 }
 
 public double distance(double xVal, double yVal) {
  return Math.sqrt(xVal*xVal+yVal*yVal);
 }
 
 public void main() {
  int numInside = 0;
  int numTotal = 0;
  double piEstimate = 0.0;
  double [] estimates;
  for (int i=0; i<10; i++) {
   double xval = this.xVal();
   double yval = this.yVal();
   double dist = this.distance(xval, yval);
   if (dist <= 0.5) {
    numInside = numInside++;
   }
   numTotal = numTotal++;
   estimates[i] = 4 * (numInside/numTotal);
  }
  System.out.println(estimates);
  for (int j=0; j<10; j++) {
   piEstimate = piEstimate + estimates[j];
  }
  System.out.println(piEstimate/10);
 }
 
}
